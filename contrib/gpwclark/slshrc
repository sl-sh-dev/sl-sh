	(defn spl
	"Give it a spelling of a word, it will tell you what words are spelled like it.
	Section: user-shell
	"
	(word)
		(println (str (| (echo (str word)) $(aspell -a)))))

(defn weather
	"print weather in terminal
	Section: user-shell"
		()
		$(curl "wttr.in"))
